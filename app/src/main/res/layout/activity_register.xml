<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#560C63"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:text="Name"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/nameedit"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/rollno"
        android:layout_below="@+id/nameedit"
        android:text="Rollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/rolledit"
        android:layout_below="@+id/rollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Admno"
        android:id="@+id/adtext"
        android:layout_below="@+id/rolledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/adedit"
        android:layout_below="@+id/adtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/calltext"
        android:text="College"
        android:layout_below="@+id/adedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/calledit"
        android:layout_below="@+id/calltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="User name"
        android:id="@+id/usertext"
        android:layout_below="@+id/calledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/useredit"
        android:layout_below="@+id/calledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/passtext"
        android:text="Password"
        android:layout_below="@+id/useredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/passedit"
        android:layout_below="@+id/passtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Conform password"
        android:id="@+id/conformtext"
        android:layout_below="@+id/passedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/conformedit"
        android:layout_below="@+id/conformtext"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/conformedit"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"/>
    <Button
        android:layout_below="@+id/button1"
        android:id="@+id/button2"
        android:text="Go to login button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</RelativeLayout>